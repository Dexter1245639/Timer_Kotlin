<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmentMinutnik">


    <Button
            android:text="+"
            android:layout_width="59dp"
            android:layout_height="39dp" android:id="@+id/buttonDodajSekundaDziesatek"
            app:layout_constraintBottom_toTopOf="@+id/tvMinutnikCzas" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/buttonDodajMinutaJednosci"/>
    <Button
            android:text="+"
            android:layout_width="59dp"
            android:layout_height="39dp" android:id="@+id/buttonDodajSekundaJednosci"
            app:layout_constraintBottom_toTopOf="@+id/tvMinutnikCzas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" app:layout_constraintStart_toEndOf="@+id/buttonDodajSekundaDziesatek"
            android:layout_marginStart="6dp"/>
    <TextView
            android:id="@+id/tvMinutnikCzas"
            android:text="00:00"
            android:textSize="96sp"
            android:textAlignment="center"
            android:layout_width="414dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="118dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.269" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/buttonStart"
            android:text="Start"
            android:layout_width="104dp"
            android:layout_height="61dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.255"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/buttonPauza"
            android:text="Pauza"
            android:layout_width="119dp"
            android:layout_height="52dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"
            app:layout_constraintBottom_toTopOf="@+id/buttonStop" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/buttonStop"
            android:text="Stop"
            android:layout_height="63dp" android:layout_width="127dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.68"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="KONFIGURACJA"
            android:layout_width="195dp"
            android:layout_height="56dp" android:id="@+id/buttonKonfiguracja"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/buttonStop"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="+"
            android:layout_width="59dp"
            android:layout_height="39dp" android:id="@+id/buttondodajMinutaDziesiatek"
            app:layout_constraintBottom_toTopOf="@+id/tvMinutnikCzas" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="+"
            android:layout_width="59dp"
            android:layout_height="39dp" android:id="@+id/buttonDodajMinutaJednosci"
            app:layout_constraintBottom_toTopOf="@+id/tvMinutnikCzas" app:layout_constraintStart_toEndOf="@+id/buttondodajMinutaDziesiatek"
            android:layout_marginStart="7dp"/>
    <Button
            android:text="-"
            android:layout_width="51dp"
            android:layout_height="48dp" android:id="@+id/buttonOdejmijMinuteDziesiatek"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp"/>
    <Button
            android:text="-"
            android:layout_width="51dp"
            android:layout_height="48dp" android:id="@+id/buttonOdejmijMinuteJednostek"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas" app:layout_constraintStart_toEndOf="@+id/buttonOdejmijMinuteDziesiatek"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="-"
            android:layout_width="51dp"
            android:layout_height="48dp" android:id="@+id/odejmijSekundeDziesiatki"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/buttonOdejmijMinuteJednostek"/>
    <Button
            android:text="-"
            android:layout_width="51dp"
            android:layout_height="48dp" android:id="@+id/odejmijSekundeJednosci"
            android:layout_marginEnd="83dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/odejmijSekundeDziesiatki"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tvMinutnikCzas"/>

</androidx.constraintlayout.widget.ConstraintLayout>