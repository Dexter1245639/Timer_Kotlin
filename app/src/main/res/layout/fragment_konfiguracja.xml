<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmentKonfiguracja">

    <TextView
            android:text="Sekundy"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_width="98dp"
            android:layout_height="39dp" android:id="@+id/textview_seconds"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tvSekundy"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="76dp"
            app:layout_constraintVertical_bias="0.832"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/plusSekunda"
            app:layout_constraintTop_toBottomOf="@+id/tvSekundy"
            app:layout_constraintBottom_toTopOf="@+id/minusSekunda" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/plusMinuta" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minusMinuta"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/minusSekunda"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="257dp"/>
    <TextView
            android:text="Minuty"
            android:textAlignment="center"
            android:id="@+id/textview_minutes"
            android:textSize="24sp"
            android:layout_width="93dp"
            android:layout_height="38dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvMinuty"
            app:layout_constraintEnd_toStartOf="@+id/textview_seconds" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.555" app:layout_constraintVertical_bias="0.836"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minusSekunda"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="257dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/plusMinuta"
            app:layout_constraintTop_toBottomOf="@+id/tvMinuty"
            app:layout_constraintBottom_toTopOf="@+id/minusMinuta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <TextView
            android:text="0"
            android:textAlignment="center"
            android:textSize="48sp"
            android:layout_width="94dp"
            android:layout_height="55dp" android:id="@+id/tvSekundy"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="436dp"/>
    <TextView
            android:text="0"
            android:textAlignment="center"
            android:textSize="48sp"
            android:layout_width="93dp"
            android:layout_height="55dp" android:id="@+id/tvMinuty"
            android:layout_marginBottom="436dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="MINUTNIK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/minutnik"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="152dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="533dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>